<%= ui :controller, name: :movies do %>
  <%= ui :box do %>
    <div class="flex">
      <div class="font-semibold text-2xl text-stone-800 flex-1">
        Movies
      </div>

      <%= ui :button, text: 'Create', click: 'movies#togglePopup' %>
    </div>

    <div class="text-xs text-stone-500 mt-1">
      List of all Movies...
    </div>

    <%= ui :table, data: Movie.all do |t| %>
      <% t.number :id, size: 1 %>
      <% t.text :title, size: 11 %>
    <% end %>
  <% end %>
<% end %>
