<%=
  Box(
    class_name: 'w-96 mx-auto mt-40',
    title: 'Password Reset',
    description: 'Forgot your password?'
  ) {
    Form(action: user_password_path) {
      Input(
        label: 'Email',
        class_name: 'mt-4',
        name: 'user[email]'
      )+

      Link(
        text: 'Sign In',
        href: new_user_session_path,
        class_name: 'flex justify-end mt-1'
      )+

      Button(
        class_name: 'w-full mt-4',
        text: 'Reset',
        type: :submit
      )
    }
  }
%>
