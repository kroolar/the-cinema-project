<%= ui :box,
        class_name: 'w-96 mx-auto mt-40',
        title: 'Password Reset',
        description: 'Forgot your password?' do
%>
  <%= ui :form, action: '/users/password' do %>
    <%= ui :input,
            label: 'Email',
            class_name: 'mt-4',
            name: 'user[email]'
    %>

    <%= ui :link,
            text: 'Sign In',
            href: '/users/sign_in',
            class_name: 'flex justify-end mt-1 font-light'
    %>

    <%= ui :button,
            class_name: 'w-full mt-4',
            text: 'Reset',
            type: :submit
    %>
  <% end %>
<% end %>
