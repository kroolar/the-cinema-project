<%= ui :box,
        class_name: 'w-96 mx-auto mt-40',
        title: "Sign Up",
        description: "Enter details below to create your account." do
%>
  <%= ui :form, action: '/users' do %>
    <%= ui :input,
            class_name: 'mt-4',
            label: 'Email',
            name: 'user[email]'
    %>

    <%= ui :input,
            class_name: 'mt-2 mb-1',
            label: 'Password',
            name: 'user[password]',
            type: 'password'
    %>

    <%= ui :input,
            class_name: 'mt-2 mb-4',
            label: 'Password Confirmation',
            name: 'user[password_confirmation]',
            type: 'password'
    %>

    <%= ui :button,
            class_name: 'w-full',
            text: 'Sign Up',
            type: :submit
    %>

    <%= ui :row, class_name: 'mt-4 text-center' do %>
      <%= ui :text,
              text: "Already have an account?",
              class_name: 'text-gray-600 text-sm font-light mt-4 inline mx-auto w-full text-center'
      %>

      <%= ui :link,
              href: '/users/sign_in',
              text: 'Sign In'
      %>
    <% end %>
  <% end %>
<% end %>
