<%= ui :box,
  class_name: 'w-96 mx-auto mt-40',
  title: "Sign In",
  description: "Enter your email below to sign in." do
%>
  <%= ui :form, action: new_user_session_path, object: User.first do %>
    <%= ui :input,
      class_name: 'mt-4',
      label: 'Email',
      name: 'user[email]'
    %>

    <%= ui :input,
      class_name: 'mt-2 mb-1',
      label: 'Password',
      name: 'user[password]',
      type: 'password'
    %>

    <%= ui :link,
      class_name: 'mb-4 font-light flex justify-end mt-2',
      href: new_user_password_path,
      text: 'Forgot your password?'
    %>

    <%= ui :button,
      class_name: 'w-full',
      text: 'Sign In',
      type: :submit
    %>

    <%= ui :row, class_name: 'mt-4 flex items-center justify-center' do %>
      <%= ui :text,
        text: "Don't have an account?",
        class_name: 'text-gray-600 text-sm font-light mr-1'
      %>

      <%= ui :link, href: new_user_registration_path, text: 'Sign Up' %>
    <% end %>
  <% end %>
<% end %>